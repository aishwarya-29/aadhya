<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wallpaper3"
    tools:context=".ForgotPassword">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/wallpaper3" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="335dp"
        android:layout_height="55dp"
        android:layout_marginTop="52dp"
        android:layout_marginBottom="130dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Forgot Password?"
        android:textColor="#FFECCC"
        android:textColorHint="#000000"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/loading"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="300dp"
        android:layout_height="53dp"
        android:layout_marginTop="120dp"
        android:layout_marginBottom="130dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Please enter your registered email id so that we can send you the reset link"
        android:textAlignment="center"
        android:textColor="#FFECCC"
        android:textColorHint="#000000"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/loading"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        android:gravity="center_horizontal" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/forgmail"
        android:layout_width="307dp"
        android:layout_height="40dp"
        android:drawableEnd="@drawable/ic_email_white_24dp"
        android:drawableRight="@drawable/ic_email_white_24dp"
        android:fontFamily="@font/nunito_sans"
        android:hint="Email"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textColorLink="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.363" />

    <Button
        android:id="@+id/btn_mail"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginEnd="160dp"
        android:layout_marginRight="160dp"
        android:layout_marginBottom="308dp"
        android:background="@drawable/default_button"
        android:fontFamily="@font/montserrat_bold"
        android:text="Send mail"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>